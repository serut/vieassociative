<?php $__env->startSection('footer-js'); ?>
	<script type="text/javascript">
	$(function() {
		$("#toolnews a").click(function(){
			$('#'+$(this).attr('data-component')).toggle();
			$(this).find('i').toggleClass("fa-times").toggleClass("fa-plus");
			return false;
		})
	});
	</script>
